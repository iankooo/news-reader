<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="handler"
            type="com.schipala_ianko_radoslav.newsreader.feature.newsreaderlist.listener.NewsReaderHandler" />

        <variable
            name="viewModel"
            type="com.schipala_ianko_radoslav.newsreader.feature.newsreaderlist.model.ArticleItemViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="@{viewModel.title}"
            tools:text="Title" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/photo_image_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:onClickListener="@{() -> handler.onItemSelected(viewModel)}"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            app:imageUrl="@{viewModel.imageURL}" />

        <TextView
            android:id="@+id/content_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:lines="1"
            android:paddingHorizontal="8dp"
            android:paddingVertical="8dp"
            android:text="@{viewModel.content}"
            tools:text="Some text that might be quite long;adsadadasdasdasdads" />
    </LinearLayout>
</layout>